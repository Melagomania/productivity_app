<section class="screen task-list-screen">
  <header class="screen-header">
    <div class="main-container">
      <h1 class="screen-heading task-list-screen__screen-heading">Dalily Task List
        <button class="task-list-screen__add-btn"></button>
      </h1>
      <div class="today-tasks__tabs-wrapper">
        <ul class="tabs tabs--right list">
          <li class="tabs__item">
            <a href="/task-list" class="tabs__btn">To Do</a>
          </li>
          <li class="tabs__item">
            <a href="/task-list/done" class="tabs__btn tabs__btn--current">Done</a>
          </li>
        </ul>
